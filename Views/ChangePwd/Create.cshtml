@model MvcApplication2.Models.Model_Login


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/User_LayoutPage1.cshtml";
}

 <div class="clearfix">
     @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

               
                <div class="vc_row wpb_row vc_row-fluid page-margin-top">
                    <div class="wpb_column vc_column_container vc_col-sm-12">
                        <div class="wpb_wrapper">
                           
                        </div>
                    </div>
                </div>
                <div id="contact-form" action="#" method="post" class="vc_row wpb_row vc_row-fluid padding-bottom-66 page-margin-top cost-calculator-container contact-form">
                    <div class="wpb_column vc_column_container vc_col-sm-12">
                        <div class="wpb_wrapper">
                            <div class="vc_row wpb_row vc_inner vc_row-fluid">
                                <div class="wpb_column vc_column_container vc_col-sm-4">
                                                                    </div>
                              <div class="vc_row wpb_row vc_inner vc_row-fluid page-margin-top">
                                <div class="wpb_column vc_column_container vc_col-sm-3">
                                    <div class="wpb_wrapper">
                                       
                                        <div class="cost-calculator-box clearfix page-margin-top">
                                            
                                            <input type="hidden" name="time-frame-label" value="PREFFERED TIME FRAME">
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="wpb_column vc_column_container vc_col-sm-6">
                                    <div class="wpb_wrapper">
                                        <div class="cost-calculator-box cost-calculator-contact clearfix">
                                            <div class="vc_row wpb_row vc_inner">
                                                <label>Change Password</label>
                                            </div>
                                            <div class="vc_row wpb_row vc_inner margin-top-20">
                                               <div class="vc_row wpb_row vc_inner margin-top-20">
                                            <div class="block">
                                                
                                                 <label>Old Passord</label>
                                                @Html.PasswordFor(model => model.Password, new { @class = "block" })
                                                @Html.ValidationMessageFor(model => model.Password)
                                            </div>
                                          </div>
 
												<div class="vc_row wpb_row vc_inner margin-top-20">
                                            <div class="block">
                                                
                                                 <label>New Passord</label>
                                                @Html.PasswordFor(model => model.NewPassword, new { @class = "block" })
                                                @Html.ValidationMessageFor(model => model.NewPassword)
                                            </div>
                                          </div>
 
												
												<div class="vc_row wpb_row vc_inner margin-top-20">
                                            <div class="block">
                                                
                                                 <label>Confirm Passord</label>
                                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "block" })
                                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                            </div>
                                          </div>
                                            </div>
                                            <div class="vc_row wpb_row vc_inner margin-top-20">
                                                <input type="hidden" name="action" value="theme_cost_calculator_form">
                                                <input type="hidden" name="type" value="appointment">
                                                <input type="submit" class="more display-block submit-contact-form"  value="SUBMIT NOW"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                        </div>
                </div>
     }   
     </div>                        