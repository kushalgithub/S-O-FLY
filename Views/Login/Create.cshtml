@model MvcApplication2.Models.Model_Login

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/User_LayoutPage1.cshtml";
}

<div class="theme-page">
    <div class="clearfix">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div id="contact-form" action="#" method="post" class="vc_row wpb_row vc_row-fluid padding-bottom-66 page-margin-top cost-calculator-container contact-form">
                <div class="wpb_column vc_column_container vc_col-sm-12">
                    <div class="wpb_wrapper">
                        <div class="vc_row wpb_row vc_inner vc_row-fluid page-margin-top">
                            <div class="wpb_column vc_column_container vc_col-sm-3">
                            </div>
                            <div class="wpb_column vc_column_container vc_col-sm-6">
                                <div class="wpb_wrapper">
                                    <div class="cost-calculator-box cost-calculator-contact clearfix">
                                        <div class="vc_row wpb_row vc_inner">
                                            <label>Login</label>
                                        </div>
                                        <div class="vc_row wpb_row vc_inner margin-top-20">
                                            <div class="block">
                                                
                                                 <label>User Name</label>
                                                @Html.TextBoxFor(model => model.UserName, new { @class = "text_input" })
                                                @Html.ValidationMessageFor(model => model.UserName)
                                            </div>
                                          </div>

                                         <div class="vc_row wpb_row vc_inner margin-top-20">
                                            <div class="block">
                                                
                                                 <label>Password</label>
                                                @Html.PasswordFor(model => model.Password, new { @class = "text_input" })
                                                @Html.ValidationMessageFor(model => model.Password)
                                            </div>
                                          </div>

                                         <div class="vc_row wpb_row vc_inner margin-top-20">
                                        <div >
                                            <input type="hidden" name="action" value="theme_cost_calculator_form">
                                            <input type="hidden" name="type" value="appointment">
                                            <input type="submit"  class="more display-block submit-contact-form" style="width:100%;" value="LogIn" />
                                        </div>
                                             </div>
                                     <div class="vc_row wpb_row vc_inner margin-top-20" style="margin:20px 0px 0px 450px">   <a href='@Url.Action("Create","ForgotPwd")'>Forgot Password?</a> </div>
                                    <div class="vc_row wpb_row vc_inner margin-top-20">
                                   <div >
                                            <input type="hidden" name="action" value="theme_cost_calculator_form">
                                            <input type="hidden" name="type" value="appointment">
                                            <a class="more display-block submit-contact-form" href='@Url.Action("Create","UserReg")' title="SUBMIT NOW"><span>Don't have an account?</span></a>
                                        </div>
                                        </div>
                                   

                                             </div>


                            </div>
                        </div>
                    </div>
                        
                </div>
            </div>
                </div>
        
        }
            </div>
            </div>


<div>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
