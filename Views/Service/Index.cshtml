@model IEnumerable<MvcApplication2.Dbml.Tbl_Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <h4 class="m-t-0 header-title"><b>Services</b></h4>
                                    <p class="text-muted font-13 m-b-30">
                                       Services Information 
                                    </p>

                                    <table id="datatable" class="table table-striped table-bordered">
									
                                       <thead>
                                            <tr>
                                             <th>
            @Html.DisplayNameFor(model => model.Service_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceDiscription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceCharge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceImage)
        </th>
        
        
        <th></th>
                                            </tr>
                                        
                                       </thead>
                                        <tbody>
                                         @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Service_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceDiscription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceCharge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceImage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Service_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Service_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Service_Id })
        </td>
    </tr>
}



                                        </tbody>
                                    </table>
                                </div>
                            </div>





