@model MvcApplication2.Models.Model_State_tbl

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row">
							<div class="col-lg-6">
								<div class="card-box">
										<h4 class="m-t-0 header-title"><b>State</b></h4>
									
	
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
	                                        
									<div action="#" data-parsley-validate novalidate>

                                        <div class="form-group">
	                                                <label for="city">State Id*</label>
             @Html.TextBoxFor(model => model.State_Id, new { @class="form-control"})
            @Html.ValidationMessageFor(model => model.State_Id)
	                                                    
														</div>
										

										<div class="form-group">
	                                                <label for="city">State Name*</label>
             @Html.TextBoxFor(model => model.State_Name, new { @class="form-control"})
            @Html.ValidationMessageFor(model => model.State_Name)
	                                                    
														</div>
										
                                        <div class="form-group">
	                                                <label for="city">Country*</label>
	                                                
             @Html.DropDownListFor(model => model.Country_Id,(IEnumerable<SelectListItem>)ViewBag.countryid,"--Select--", new { @class="form-control"})
            @Html.ValidationMessageFor(model => model.Country_Id)
	                                                    
														</div>


												<div class="form-group text-right m-b-0">
											<button class="btn btn-primary waves-effect waves-light" type="submit">
												Update
											</button>
                                                    </div>
									</div>
}
								</div>
							</div>
							
            		</div>



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

