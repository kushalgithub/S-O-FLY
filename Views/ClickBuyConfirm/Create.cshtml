<div class="page-header-left">
<h1>CART</h1>
</div>
</div>
    </div>



<div class="vc_row wpb_row vc_row-fluid page-margin-top">
    <div class="vc_col-sm-12 wpb_column vc_column_container">
<form action="#" method="post">

		
		<table class="shop_table cart" cellspacing="0">
			<thead>
				<tr>
					<th class="product-remove">&nbsp;</th>
					<th class="product-thumbnail">Preview</th>
					<th class="product-name">Product</th>
					<th class="product-price">Product Name</th>
					<th class="product-quantity">Price</th>
					<th class="product-subtotal">Quantity</th>
				</tr>
			</thead>
			<tbody>
				 @{
         var cnt = 0;
				 foreach (var item in Model) {
         
										<tr class="cart_item">

							<td class="product-remove">
								<a href='~/ClickBuyConfirm/Delete/@Html.DisplayFor(modelItem => item.Buy_Id)' class="remove" title="Remove this item">&times;</a>							</td>
                                            
							<td >
								<a href="../../FileUpload/ @Html.DisplayFor(modelItem => item.Tbl_Part.PartImage)"><img width="180" height="180" src='../../FileUpload/@Html.DisplayFor(modelItem => item.Tbl_Part.PartImage)' class="attachment-shop_thumbnail wp-post-image" alt="T_7_front" /></a>							</td>

							<td class="product-name">
								<a href="#"> @Html.DisplayFor(modelItem => item.Tbl_Part.PartName) </a>							</td>

							<td class="product-price">
								<span class="amount">RS. @Html.DisplayFor(modelItem => item.Tbl_Part.PartPrice)</span>							</td>

							<td class="product-quantity">
								<div class="quantity"><input type="button" class="minus" value="-">@Html.TextBoxFor(modelItem=>item.Quantity,new {@type="number",@step="1",@min="1",@name="quantity",@value="1",@title="Qty",@class="input-text qty text",@size=""})
<input type="button" class="plus" value="+"></div>
							</td>

							<td class="product-subtotal">
                                @{
         var x = item.Tbl_Part.PartPrice;
         var y = item.Quantity;
         var price = Convert.ToInt32(x)  * y;

         cnt = Convert.ToInt32(cnt) + Convert.ToInt32(price);

         Session["amount"] = cnt;
                          }<span class="amount">RS.@price.00</span>							</td>
                                            
						</tr>
     }	
     
     }
                <tr>
					<td colspan="6" class="actions">

													
						
						<input type="submit" class="button" name="update_cart" value="Update Cart" />

						
						<input type="hidden" id="_wpnonce" name="_wpnonce" value="2719157150" /><input type="hidden" name="_wp_http_referer" value="/wp_themes/carservice/cart/?removed_item=1" />					</td>
				</tr>
     
							</tbody>
		</table>

		

		</form>
    </div>
    </div>

<div class="cart_totals ">

	
	<h4 class="box-header">Cart Totals</h4>

	<div class="clearfix page-margin-top">
	<table cellspacing="0" class="shop_table cart_totals_table">

		
		
		
														
		
		<tr class="order-total">
			<th>Total</th>
			<td><strong><span class="amount">RS.@cnt.00</span></strong> </td>
		</tr>
		
				<tr>
			<td colspan="2">
				<div class="wc-proceed-to-checkout">

					<a href="~/PayPal/ValidateCommand" class="checkout-button button alt wc-forward">Proceed to Checkout</a>
				</div>
			</td>
		</tr>

		
	</table>
	</div>

